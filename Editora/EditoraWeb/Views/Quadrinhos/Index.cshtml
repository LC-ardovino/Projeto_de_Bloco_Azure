@model IEnumerable<EditoraBLL.Models.Quadrinho>

@{
    ViewData["Title"] = "Quadrinhos";
}

<h1>Quadrinhos</h1>

<p>
    <a asp-action="Create">Incluir Quadrinho</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class=" btn btn-warning">Detalhe</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Apagar</a> 
            </td>
        </tr>
}
    </tbody>
</table>
